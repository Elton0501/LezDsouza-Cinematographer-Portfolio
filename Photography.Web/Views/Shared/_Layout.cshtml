@using Services;
@{ 
    var sminfo = Services.KeyService.Instance.keydata("SocialMedia");
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Leslie D'souza is a Cinematographer based out of Mumbai. His work ranges across a variety of visual storytelling mediums: Long formats, Short Films, Ad commercials, Fashion,Food, Music, Talk shows and a lot more." />
    <meta property="og:title" content="Leslie Dsouza | Cinematographer" />
    <meta property="og:url" content="https://lesliedsouza.in/" />
    <meta property="og:description" content="Leslie D'souza is a Cinematographer based out of Mumbai. His work ranges across a variety of visual storytelling mediums: Long formats, Short Films, Ad commercials, Fashion,Food, Music, Talk shows and a lot more." />
    <meta property="og:image" content="https://lesliedsouza.in/Content/Images/wapp-ico.png" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/all.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.3/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.4.1.min.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <style>
        .navbar-brand {
            padding: 1rem 1rem 0 !important;
        }

            .navbar-brand p {
                text-align: center;
            }

        @@media (min-width: 575px) {
            .nav-cont {
                flex-direction: column;
            }
        }
    </style>

</head>
<body>

    <nav class="navbar navbar-dark navbar-expand-sm bg-dark fixed-top">
        <div class="container nav-cont">
            <a href="/" class="navbar-brand">
                <h2>LESLIE D'SOUZA</h2>
                <p>CINEMATOGRAPHER</p>
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>


            <div id="navbarCollapse" class="collapse navbar-collapse">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a href="/" class="nav-link active">
                            Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Work","Projects")" class="nav-link active">
                            Work
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Images","Projects")" class="nav-link active">
                            Images
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("about","Home")" class="nav-link active">
                            About
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("contact","Home")" class="nav-link active">
                            Contact
                        </a>
                    </li>
                </ul>
            </div>



        </div>
    </nav>


    <div class="body">
        @RenderBody()
    </div>

    <footer class="footer">
        <div class="footer-icons">
            @foreach (var item in sminfo)
            {
                <a class="pr-1" href="@item.Name"><i class="@item.Description"></i></a>
            }
            @*<a class="pr-1"><i class="bi bi-vimeo"></i></a>
            <a class="pr-1"><i class="bi bi-instagram"></i></a>
            <a class="pr-1"><i class="bi bi-envelope"></i></a>*@
        </div>
    </footer>
</body>
</html>
