@model List<Models.Images>
@{
    ViewBag.Title = "Images";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: var(--primary);
    }

    .col-12 {
        -webkit-column-count: 3;
        -moz-column-count: 3;
        column-count: 3;
    }


        .col-12 > div {
            background: black;
            width: 100%;
            margin-bottom: 15px;
            display: inline-block;
        }

    .sm img {
        width: 100%;
    }

    .lg img {
        width: 100%;
    }

    .img-banner {
        position: relative;
        text-align: center;
        margin-top: 12rem;
    }

        .img-banner img {
            display: block;
            max-width: 100%;
            height: auto;
        }

        .img-banner .text {
            position: absolute;
            top: 50%;
            left: 63%;
            transform: translate(-50%, -50%);
        }

        .img-banner h1 {
            letter-spacing: 10px;
            width: max-content;
            color: var(--text);
        }

    h1 {
        text-align: center;
        transform: scale(0.94);
        animation: scale 3s forwards cubic-bezier(0.5, 1, 0.89, 1);
    }

    @@keyframes scale {
        100% {
            transform: scale(1);
        }
    }

    span {
        display: inline-block;
        opacity: 0;
        filter: blur(4px);
    }

        span:nth-child(1) {
            animation: fade-in 0.8s 0.1s forwards cubic-bezier(0.11, 0, 0.5, 0);
        }

        span:nth-child(2) {
            animation: fade-in 0.8s 0.2s forwards cubic-bezier(0.11, 0, 0.5, 0);
        }

    hr {
        background-color: white;
    }

    @@keyframes fade-in {
        100% {
            opacity: 1;
            filter: blur(0);
        }
    }


    @@media (max-width: 500px) {
        .col-12 {
            -webkit-column-count: 3;
            -moz-column-count: 3;
            column-count: 2;
        }

        .text h1 {
            font-size: 0.9rem !important;
            letter-spacing: 6px;
        }

        .img-banner {
            margin-top: 8rem;
        }
    }

    @@media (max-width: 820px) {
        .text h1 {
            font-size: 1.5rem;
        }
    }
</style>

<div class="img-banner container">
    <img src="~/Content/Images/ib1.png" />
    <div class="text">
        <h1>
            <span>Analog</span>
            <span>Explorations</span>
        </h1>
    </div>
    <hr />
</div>


<div class="img-gallery m-5">
    <div class="col-12">
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <div class="lg"><img src="@item.Image" /></div>
            }
        }
        else
        {
            <h6>No Data Avaialble!</h6>
        }
    </div>
</div>

